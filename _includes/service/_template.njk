    {% if params.formula %}
        <template x-if="{{params.formula}}" >
            <article class="flex flex-col bg-gray-300 rounded-xl border-gray-600 border p-4 m-4">
                <div class="">
                <h2 class="font-bold text-2xl my-2">{{params.service}}</h2>
                <p class="my-4"> {{params.description}}</p>
                </div>
                <div class="mt-2 flex  justify-center items-center">
                <button 
                type="button"
                x-ref="s{{params.servicenum}}add"
                @click="count++;$el.classList.toggle('hidden');$refs.s{{params.servicenum}}remove.classList.toggle('hidden');$refs.servicepage.href += '&s{{params.servicenum}}'"
                class="grow p-4 bg-ny-blue text-white tracking-widest font-bold rounded-xl uppercase text-sm nysds-plus hover:bg-black focus:bg-black">
                    add service
                </button>
                <button 
                type="button"
                x-ref="s{{params.servicenum}}remove"
                @click="count--;$el.classList.toggle('hidden');$refs.s{{params.servicenum}}add.classList.toggle('hidden');$refs.servicepage.setAttribute('href', $refs.servicepage.href.replace('&s{{params.servicenum}}', ''))"
                class="grow p-4 bg-ny-blue text-white tracking-widest font-bold rounded-xl uppercase text-sm nysds-minus hidden hover:bg-black focus:bg-black">
                   remove service
                </button>
                </div>
            </article>
        </template>
    {% else %}
        <template x-if="window.location.href.match(/\bs{{params.servicenum}}\b/)">
            <article class="flex bg-gray-300 rounded-xl border-gray-600 border p-4 my-4">
                <div class="">
                    <h2 class="my-2 font-bold text-2xl">{{params.service}}</h2>
                    <p class="mt-4 mb-2"> {{params.description}}</p>
                </div>
            </article>
        </template>
    {% endif %}